{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "sourceMap": true,
    "outDir": "dist",
    // "baseUrl": "",
    "declaration": true,
    "declarationDir": "types",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Aliases */
    "paths": {
      "@kapwa/*": ["./src/lib/kapwa/*"]
    }
  },
  "include": ["src/lib/kapwa/**/*.ts", "src/lib/kapwa/**/*.tsx"],
  // Exclude .stories.tsx files
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "src/lib/kapwa/**/*.stories.tsx"
  ]
}
